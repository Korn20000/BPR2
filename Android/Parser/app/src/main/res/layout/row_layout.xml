<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CPR"
        android:text="CPR:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tx_CPR"
        android:layout_toStartOf="@+id/tx_CPR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_CPR"
        android:text="CPR"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tx_name"
        android:layout_alignStart="@+id/tx_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:text="Name:"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/CPR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tx_CPR"
        android:layout_toStartOf="@+id/tx_CPR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_name"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:text="Name"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_above="@+id/tx_surname"
        android:layout_alignLeft="@+id/tx_surname"
        android:layout_alignStart="@+id/tx_surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/surname"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:text="Surname:"
    android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tx_name"
        android:layout_toStartOf="@+id/tx_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_surname"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:text="Surname"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/surname"
        android:layout_alignBottom="@+id/surname"
        android:layout_alignLeft="@+id/tx_age"
        android:layout_alignStart="@+id/tx_age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:text="Age:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/tx_surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_age"
        android:text="Age"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignLeft="@+id/tx_type"
        android:layout_alignStart="@+id/tx_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:text="Type:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/tx_age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tx_age"
        android:layout_alignEnd="@+id/tx_age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_type"
        android:text="Type"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/type"
        android:layout_alignBottom="@+id/type"
        android:layout_toRightOf="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:text="Phone No:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/tx_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_phone"
        android:text="Phone No"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/phone"
        android:layout_alignBottom="@+id/phone"
        android:layout_toRightOf="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="Address:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tx_phone"
        android:layout_toStartOf="@+id/tx_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_address"
        android:text="Address"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/phone"
        android:layout_toRightOf="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="E-mail:"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/tx_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tx_phone"
        android:layout_alignEnd="@+id/tx_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_email"
        android:text="E-mail"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_toRightOf="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>